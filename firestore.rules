rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // HELPER FUNCTIONS
    // ========================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.plan == 'admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Helper function específica para roles del nuevo sistema
    function isAdminByRole() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Verifica si el usuario intenta modificar campos de roles
    function isModifyingRoleFields() {
      return request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'roleAssignedBy', 'roleAssignedAt', 'permissions']);
    }
    
    function hasRequiredFields() {
      return request.resource.data.keys().hasAll([
        'userId', 'origin', 'destination', 'totalMiles', 'rpm'
      ]);
    }
    
    function hasValidNumbers() {
      let data = request.resource.data;
      return data.rpm >= 0 && data.rpm <= 50 &&
             data.totalMiles >= 0 && data.totalMiles <= 10000 &&
             data.totalCharge >= 0 && data.totalCharge <= 500000;
    }
    
    // ========================================
    // LOADS COLLECTION
    // ========================================
    match /loads/{loadId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       hasRequiredFields() &&
                       hasValidNumbers();
      
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid &&
                       hasRequiredFields() &&
                       hasValidNumbers();
      
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // EXPENSES COLLECTION
    // ========================================
    match /expenses/{expenseId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid;
      
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // LEX AI - PROFILES
    // ========================================
    match /lexProfiles/{userId} {
      allow read, write: if isOwner(userId);
      allow create: if isOwner(userId);
    }
    
    // ========================================
    // LEX AI - ANALYSES
    // ========================================
    match /lexAnalyses/{analysisId} {
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;
      
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      
      allow update, delete: if isAuthenticated() &&
                               resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // LEX AI - CONVERSATIONS
    // ========================================
    match /lexConversations/{conversationId} {
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;
      
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      
      allow update, delete: if isAuthenticated() &&
                               resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // LEX AI - LEARNING (Legacy)
    // ========================================
    match /lexLearning/{docId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      
      allow update, delete: if isAuthenticated() &&
                               resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // DESTINATION NOTES
    // ========================================
    match /destinationNotes/{noteId} {
      allow read: if isAuthenticated() &&
                     resource.data.userId == request.auth.uid;
      
      allow create, update: if isAuthenticated() &&
                               request.resource.data.userId == request.auth.uid;
      
      allow delete: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // USER PLANS
    // ========================================
    match /userPlans/{userId} {
      allow read: if isOwner(userId);
      
      allow create: if isOwner(userId) &&
                       !exists(/databases/$(database)/documents/userPlans/$(userId));
      
      allow update: if false;
      allow delete: if false;
    }
    
    // ========================================
    // ANALYTICS
    // ========================================
    match /analytics/{eventId} {
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      
      allow read, update, delete: if false;
    }

    // ========================================
    // STRIPE EXTENSION
    // ========================================
    match /customers/{uid} {
      allow read: if request.auth.uid == uid;
      
      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }
      
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
      
      match /payments/{id} {
        allow read: if request.auth.uid == uid;
      }
    }

    match /products/{id} {
      allow read: if true;
      
      match /prices/{id} {
        allow read: if true;
      }
      
      match /tax_rates/{id} {
        allow read: if true;
      }
    }
    
    // ========================================
    // USERS COLLECTION
    // ========================================
    match /users/{userId} {
      // Lectura: usuario puede leer su propio perfil, admins pueden leer todos
      allow read: if isOwner(userId) || isAdminByRole();
      
      // Creación: usuario puede crear su propio perfil
      allow create: if isOwner(userId);
      
      // Actualización NORMAL (sin tocar roles):
      // Usuario puede actualizar su perfil EXCEPTO campos de roles
      allow update: if isOwner(userId) && !isModifyingRoleFields();
      
      // Actualización de ROLES:
      // Solo admins pueden modificar roles
      allow update: if isAdminByRole() && isModifyingRoleFields();
      
      match /checkout_sessions/{sessionId} {
        allow read, write: if isOwner(userId);
      }
      
      match /loads/{loadId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ========================================
    // DENY ALL ELSE
    // ========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
